<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:layout_constraintGuide_percent=".15"
    app:layout_constraintHeight_percent=".15"
    app:layout_constraintWidth_percent=".85"
    android:layout_marginTop="@dimens/fifteen_dp"
    android:layout_marginRight="@dimens/ten_dp"
    android:layout_marginLeft="@dimens/ten_dp"
    app:cardCornerRadius="@dimens/thirty_dp">
`

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#EAEAEA">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/imgProfile"
            android:layout_width="@dimens/eighty_dp"
            android:layout_height="@dimens/eighty_dp"
            android:layout_marginStart="@dimens/ten_dp"
            android:layout_marginTop="@dimens/three_dp"
            android:layout_marginBottom="@dimens/three_dp"
            android:scaleType="fitXY"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvName"
            android:layout_width="wrap_content"
            android:layout_height="@dimens/thirty_five_dp"
            android:layout_gravity="left"
            android:fontFamily="@font/poppins_medium"
            android:layout_marginStart="@dimens/twenty_dp"
            android:layout_marginTop="@dimens/five_dp"
            android:textColor="@color/black"
            android:textSize="@dimens/twenty_two_sp"
            app:layout_constraintStart_toEndOf="@+id/imgProfile"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="@dimens/thirty_dp"
            android:layout_marginStart="@dimens/twenty_dp"
            android:fontFamily="@font/poppins_medium"
            android:textColor="@color/black"
            android:textSize="@dimens/fourteen_sp"
            app:layout_constraintStart_toEndOf="@+id/imgProfile"
            app:layout_constraintTop_toBottomOf="@+id/tvName" />

        <ImageButton
            android:id="@+id/tvGithub"
            android:layout_width="@dimens/twenty_dp"
            android:layout_height="@dimens/thirty_dp"
            android:layout_marginStart="@dimens/twenty_dp"
            android:src="@drawable/ic_github"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/imgProfile"
            app:layout_constraintTop_toBottomOf="@+id/tvTitle"
            app:layout_constraintVertical_bias="0.0" />

        <ImageButton
            android:id="@+id/tvLinkedin"
            android:layout_width="@dimens/twenty_dp"
            android:layout_height="@dimens/thirty_dp"
            android:layout_marginEnd="128dp"
            android:src="@drawable/ic_linkedin"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/tvGithub"
            app:layout_constraintTop_toBottomOf="@+id/tvTitle"
            app:layout_constraintVertical_bias="0.0" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>